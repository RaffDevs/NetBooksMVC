@model LoginViewModel

@{
    Layout = "";
    ViewData["Title"] = "Registro";

    List<string> errors = new List<string>(Model.errorView.errorMessages);
}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <meta name="description" content="Responsive Bootstrap 4 and web Application ui kit.">

    <title>:: NetBooks :: Register</title>
    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/plugins/bootstrap/css/bootstrap.min.css">

    <!-- Custom Css -->
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/color_skins.css">
</head>

<body class="theme-black">
    <div class="container">
        <div class="col-12">
            <div class="row m-t-100">
                <div class="col-lg-12">
                    <div class="card-plain">
                        <div class="header">
                            <h5>Registro</h5>
                        </div>

                        @if (errors.Count > 0)
                        {
                            @foreach (var erro in errors)
                            {
                                <div class="alert alert-danger">
                                    @erro
                                </div>
                            }
                        }
                        <form asp-controller="Account" asp-action="Register" method="post" class="form">
                            <div class="input-group">
                                <input asp-for="UserName" type="text" class="form-control" placeholder="User Name">
                                <span class="input-group-addon"><i class="zmdi zmdi-account-circle"></i></span>
                            </div>
                            <div class="input-group">
                                <input asp-for="Password" type="password" placeholder="Password" class="form-control" />
                                <span class="input-group-addon"><i class="zmdi zmdi-lock"></i></span>
                            </div>
                            <div class="form-group footer">
                                <input type="submit" class="btn btn-primary btn-round btn-block" value="Registrar" />
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jquery Core Js -->
    <script src="~/bundles/libscripts.bundle.js"></script>
    <script src="~/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
</body>

</html>