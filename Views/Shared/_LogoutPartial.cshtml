@using Microsoft.AspNetCore.Identity;

@inject SignInManager<IdentityUser> SignInManager;


@if (SignInManager.IsSignedIn(User))
{
    <form class="float-right" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post">
        <button type="submit" class="btn btn-primary btn-icon  btn-icon-mini  btn-round m-t-15">
            <i class="zmdi zmdi-power"></i>
        </button>
        <p><small>Logout</small></p>
    </form>
}
else
{

}
