@model HomeViewModel;

@{
    ViewData["Title"] = "Home Page";
}


<div class="row m-t-100">

    @if (Model.books != null && Model.books.Count > 0)
    {

        @foreach (var book in Model.books)
        {

            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card">
                    <div class="body text-center media-body">
                        <span>
                            @if (book.VolumeInfo.ImageLinks.SmallThumbnail != null)
                            {
                                <img src="@book.VolumeInfo.ImageLinks.Thumbnail" alt="user" class="rounded-circle" />
                            }
                            else
                            {
                                <img src="~/images/default-book.svg" alt="user" class="rounded-circle" />
                            }
                        </span>
                        <h6 class="m-t-10">@book.VolumeInfo.Title</h6>

                        <p class="truncate-text">@book.VolumeInfo.Description</p>
                    </div>
                </div>
            </div>
        }
    }
</div>